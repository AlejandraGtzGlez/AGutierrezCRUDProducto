@model ML.Categoria
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink("Agregar", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td class="hidden">IdCategoria</td>
                        <td>Nombre</td>
                        <td>Descripcion</td>
                        <td>Estado</td>
                        <td>EncargadoCategoria</td>
                        <td>Proveedor</td>
                        <td>CiudadProveedor</td>
                        <td>Eliminar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Categoria categoria in Model.Categorias)
                    {
                        <tr>
                          <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Categoria", new { IdCategoria = categoria.IdCategoria })"></a></td>
                            <td class="hidden">@categoria.IdCategoria</td>
                            <td>@categoria.Nombre</td>
                            <td>@categoria.Descripcion</td>
                            <td>@categoria.Estado</td>
                            <td>@categoria.EncargadoCategoria</td>
                            <td>@categoria.Proveedor</td>
                            <td>@categoria.CiudadProveedor</td>
                            <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-erase" href="@Url.Action("Delete", "Categoria", new { IdCategoria = categoria.IdCategoria })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>



