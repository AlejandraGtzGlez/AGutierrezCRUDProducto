@model ML.Categoria
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Form", "Categoria", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IdCategoria, new { @class = "hidden" })
                        @Html.TextBoxFor(model => model.IdCategoria, new { @class = "hidden form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.IdCategoria)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Nombre)
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })
                        @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Descripcion)
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @id = "txtDescripcion" })
                        @Html.ValidationMessageFor(model => model.Descripcion, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Estado)
                        @Html.TextBoxFor(model => model.Estado, new { @class = "form-control", @id = "txtEstado" })
                        @Html.ValidationMessageFor(model => model.Estado, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.EncargadoCategoria)
                        @Html.TextBoxFor(model => model.EncargadoCategoria, new { @class = "form-control", @id = "txtEncargadoCategoria" })
                        @Html.ValidationMessageFor(model => model.EncargadoCategoria, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Proveedor)
                        @Html.TextBoxFor(model => model.Proveedor, new { @class = "form-control", @id = "txtProveedor" })
                        @Html.ValidationMessageFor(model => model.Proveedor, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.CiudadProveedor)
                        @Html.TextBoxFor(model => model.CiudadProveedor, new { @class = "form-control", @id = "txtCiudadProveedor" })
                        @Html.ValidationMessageFor(model => model.CiudadProveedor, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "GetAll", "Categoria", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>


